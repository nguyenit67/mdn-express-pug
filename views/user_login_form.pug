extends layout

block content
	h1= title

	form(method="POST", action="")

		| Email
		input.form-control(type="email", name="email", placeholder="john_wick@mail.com", required)

		| Password
		input.form-control(type="password", name="password", placeholder="Password", required)

		.form-group
		button.form-control.btn.btn-primary.btn-lg(type="submit") Log In

	div.text-center 
		| Don't have an account? 
		a(href ="/user/register" ) Signup here


	if errors
		ul
			for error in errors
				li!= error.msg
