extends layout

block content
	h1= title

	form(method="POST", action="")
		| Name
		input.form-control(type="text", name="name", placeholder="John Wick", required)

		| Email
		input.form-control(type="email", name="email", placeholder="john_wick@mail.com", required)

		| Password
		input.form-control(type="password", name="password", placeholder="Password", required)

		.form-group
		button.form-control.btn.btn-primary.btn-lg(type="submit") Sign Up

	div.text-center 
		| Already have an account? 
		a(href ="/user/login" ) Login here


	if errors
		ul
			for error in errors
				li!= error.msg
